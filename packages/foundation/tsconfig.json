{
    "compilerOptions": {
      "outDir": "lib",
      "module": "esnext",
      "target": "esnext",
      "declaration": true,
      "jsx": "react-jsx",
      "lib": ["DOM", "ESNext"],
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
  }
  