{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,

    "outDir": "../../dist/packages/react",
    "rootDir": "src",

    "module": "esnext",
    "lib": ["DOM", "ESNext"],
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@react.ds/foundation": [
        "packages/foundation/lib/index.js"
      ]
    },
     "types": [
      "react",
      "react-dom",
      "jest",
      "@testing-library/jest-dom",
      "vitest/globals"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "node_modules",
    "dist",
    "vitest.config.ts"
  ]
}
