{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "strict": true,
    "noEmit": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@react.ds/foundation": ["packages/foundation/src/index.ts"],
      "@react.ds/scss": ["packages/scss/src/index.ts"],
      "@react.ds/react": ["packages/react/src/index.ts"],

    }
  }
}
